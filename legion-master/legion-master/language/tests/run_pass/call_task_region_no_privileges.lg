import "legion"

task f(r : region(int)) : int
  var t = 0
  for x in r do
    t += 1
  end
  return t
end

task g(r : region(int)) : int
  return f(r)
end

task h() : int
  var r = region(int, 5)
  var x0 = new(ptr(int, r))
  var x1 = new(ptr(int, r))
  var x2 = new(ptr(int, r))
  return g(r)
end

task main()
  legionlib.assert(h() == 3, "test failed")
end
legionlib.start(main)
