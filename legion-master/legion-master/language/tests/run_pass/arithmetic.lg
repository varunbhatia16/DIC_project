import "legion"

task f(x : int, y : int) : int
  var z : int
  var w : int
  z = x + y
  w = x * y
  z = z / 2
  return -(z - w)
end


task g(x : int, y : int) : int
  return x % y
end

task main()
  legionlib.assert(f(3, 4) == 9, "test failed")
  legionlib.assert(g(2, 4) == 2, "test failed")
  legionlib.assert(g(128, 7) == 2, "test failed")
end
legionlib.start(main)
