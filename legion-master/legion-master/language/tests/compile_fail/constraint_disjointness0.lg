-- fails-with:
-- invalid cast missing constraint $t * $t

import 'legion'

local c = legionlib.c

fspace assert_disjoint {
  x : region(int),
  y : region(int),
} where x * y end

task main()
  var t = region(int, 5)
  assert_disjoint { x = t, y = t }
end
legionlib.start(main)
