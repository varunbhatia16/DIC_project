task bar(r: region<int>, x: int@r)
  , reads(r), writes(r)
{
  *x += 10;
}

task foo(s: region<int>, r: region<int>, x: int@r)
  , reads(r), writes(r)
{
  *x += 1;
  bar(r, x);
  *x += 100;
}

task main()
{
  let r = region<int>(1);
  let x = new<int@r>();
  let p = partition<r, disjoint>(color(coloring<r>(), x, 0));
  let s = p[0];
  *x = 0;
  foo(s, r, x);
  assert *x == 111;
}
